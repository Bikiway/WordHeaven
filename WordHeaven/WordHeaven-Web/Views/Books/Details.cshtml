@model WordHeaven_Web.Data.Entity.Book

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    try
    {
        @if (Model.BookCover.Length > 0)
        {
            var base64 = Convert.ToBase64String(Model.BookCover);
            var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
            ViewData["Image"] = imgSrc;
        }

    }
    catch (Exception ex)
    {
    }
}

<center><h2 style="color: black;">"@Html.DisplayFor(model => model.Title)"</h2></center>
<br />
<div class="row">
    <div class="col-lg-12">
        <div class="main-profile ">
            <div class="row">
                <div class="col-lg-4">
                    <img src="@ViewData["Image"]" alt="" style="border-radius: 23px;">
                </div>
                <div class="col-lg-4 align-self-center">
                    <div class="main-info header-text">
                        <dl class="row" style="color: darkcyan">
                            <dt class="col-sm-5 col-md-6">
                                @Html.DisplayNameFor(model => model.Author):
                            </dt>
                            <dd class="col-sm-5 offset-sm-2 col-md-6 offset-md-0">
                                @Html.DisplayFor(model => model.Author)
                            </dd>
                            <dt class="col-sm-5 col-md-6">
                                @Html.DisplayNameFor(model => model.Publisher):
                            </dt>
                            <dd class="col-sm-5 offset-sm-2 col-md-6 offset-md-0">
                                @Html.DisplayFor(model => model.Publisher)
                            </dd>
                            <dt class="col-sm-5 col-md-6">
                                @Html.DisplayNameFor(model => model.YearOfPublication):
                            </dt>
                            <dd class="col-sm-5 offset-sm-2 col-md-6 offset-md-0">
                                @Html.DisplayFor(model => model.YearOfPublication)
                            </dd>
                            <dt class="col-sm-5 col-md-6">
                                @Html.DisplayNameFor(model => model.Abstract):
                            </dt>
                            <dd class="col-sm-5 offset-sm-2 col-md-6 offset-md-0">
                                @Html.DisplayFor(model => model.Abstract)
                            </dd>
                            <dt class="col-sm-5 col-md-6">
                                @Html.DisplayNameFor(model => model.Language):
                            </dt>
                            <dd class="col-sm-5 offset-sm-2 col-md-6 offset-md-0">
                                @Html.DisplayFor(model => model.Language)
                            </dd>
                            <dt class="col-sm-5 col-md-6">
                                @Html.DisplayNameFor(model => model.Category):
                            </dt>
                            <dd class="col-sm-5 offset-sm-2 col-md-6 offset-md-0">
                                @Html.DisplayFor(model => model.Category)
                            </dd>
                            <dt class="col-sm-5 col-md-6">
                                @Html.DisplayNameFor(model => model.Value):
                            </dt>
                            <dd class="col-sm-5 offset-sm-2 col-md-6 offset-md-0">
                                @Html.DisplayFor(model => model.Value)
                            </dd>
                            <br />
                            <br />
                            <a asp-action="Index" class="btn btn-success"><i class="fa fa-chevron-left"></i> Back to List</a>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>