        padding: 10px;
    }

    .book {
        position: relative;
        flex: 0 0 auto;
        width: 150px;
        text-align: center;
        margin: 0 10px; 
    }

        .book img {
            max-width: 100%;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

    .book-number {
        position: absolute;
        top: 0;
        left: 0;
        background: cadetblue;
        color: whitesmoke;
        border-radius: 50%;
        width: 30px;
        height: 30px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 18px;
    }

    /*Floating footer about Forum*/
    .content {
        padding: 20px;
    }

    .floating-footer {
        background-color: darkorange;
        color: antiquewhite;
        text-align: center;
        padding: 10px;
        position: fixed;
        bottom: 0;
        left: 0;
        width: 100%;
        z-index: 1000;
    }

        .floating-footer a {
            color: lightskyblue;
            text-decoration: none;
        }
    
    
    /*Bottom Footer*/

    .content {
        flex-grow: 1; 
        padding: 1px;
    }

    .sticky-footer {
        background-color: peru;
        color: #fff;
        text-align: center;
        padding: 5px;
        bottom: 0;
        left: 0;
        width: 100%;
        z-index: 1000;
    }

    .footer-left,
    .footer-right {
        display: inline-block;
        vertical-align: top;
    }

    .footer-left {
        text-align: left;
        margin-right: 230px;
    }

    .footer-right {
        text-align: right;
        margin-left: 230px;
    }

        .sticky-footer a {
