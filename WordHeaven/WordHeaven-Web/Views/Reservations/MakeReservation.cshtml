            <div class="form-group">
                <label asp-for="BookId" class="control-label">Book</label>
                <select asp-for="BookId" asp-items="Model.Books" class="form-control"></select>
                <span asp-validation-for="BookId" class="text-danger"></span>
            </div>
           <br />
           
            <div class="form-group">
                <label asp-for="ClientFirstName" class="control-label">First Name</label>
                <input asp-for="ClientFirstName" class="form-control" />
                <span asp-validation-for="ClientFirstName" class="text-danger"></span>
            </div>
            <br />

            <div class="form-group">
                <label asp-for="ClientLastName" class="control-label">Last Name</label>
                <input asp-for="ClientLastName" class="form-control" />
                <span asp-validation-for="ClientLastName" class="text-danger"></span>
            </div>
            <br />

            <div class="form-group">
                <label asp-for="UserName" class="control-label">User Name</label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <br />

           <div class="form-icons">
               <input asp-for="LoanedBook" class="form-control" value="" placeholder="Loan Date" type="date" />
           </div>
           <br />
            <div class="form-icons">
                <input asp-for="BookReturned" class="form-control" value="" placeholder="Return Date" type="date" />
            </div>
            <br />
            <div class="form-group">
                <label asp-for="storeId" class="control-label">Store</label>
                <select asp-for="storeId" asp-items="Model.Stores" class="form-control"></select>
                <span asp-validation-for="storeId" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsBooked" /> @Html.DisplayNameFor(model => model.IsBooked)
                </label>
            </div>
            <br />
            <div class="form-group" style="margin-bottom: 50px;">
                <button type="submit" value="Create" class="btn btn-primary" style="background-color: cadetblue">
                    <i class="fa fa-book" style="color: whitesmoke"></i> Create |
                </button>
                <a asp-action="Create" style="font-size: 20px; color:darkgoldenrod;">Go back</a>
