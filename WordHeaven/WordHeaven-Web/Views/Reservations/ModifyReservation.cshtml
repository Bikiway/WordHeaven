@model WordHeaven_Web.Models.Reservation.AlterStatusReservationViewModel
@{
    ViewData["Title"] = "ModifyReservation";
}

<h1 style="color: cadetblue">Manage Client Reservation</h1>

<div class="row">

    <form asp-action="Modifyreservation">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        <div class="text-bg-info">
            @Html.DisplayFor(Model => Model.ClientUserName)
        </div>

        <div class="form-group form-check">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="BookAsReturned" /> @Html.DisplayNameFor(model => model.BookAsReturned)
            </label>
        </div>

        <div class="form-group form-check">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="DidntReturnTheBook" /> @Html.DisplayNameFor(model => model.DidntReturnTheBook)
            </label>
        </div>

        <div class="form-group form-check">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="RenewTime" /> @Html.DisplayNameFor(model => model.RenewTime)
            </label>
        </div>

        <div class="form-group form-check">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="ClientPayedTaxes" /> @Html.DisplayNameFor(model => model.ClientPayedTaxes)
            </label>
        </div>
        <br />
        <div class="form-group">
            <button type="submit" value="Create" class="btn btn-primary" style="background-color: cadetblue">
                <i class="fa fa-plane-departure" style="color: whitesmoke"></i> Create
            </button>
            <a asp-action="Create" class="btn btn-success" style="font-size: 15px; color: darkgoldenrod;">Back to List</a>
        </div>
    </form>
</div>